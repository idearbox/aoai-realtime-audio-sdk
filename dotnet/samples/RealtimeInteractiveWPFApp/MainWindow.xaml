<Window x:Class="RealtimeInteractiveWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealtimeInteractiveWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFFFF60B">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <WindowsFormsHost x:Name="wfUnityHost" Margin="8" Background="White" />
        <StackPanel Grid.Row="1" Margin="4" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button x:Name="btnLog" Content="Load 3D"  Width="100" Height="40" VerticalAlignment="Center" Click="btnLog_Click"  Margin="4,0,0,0"/>
            <Button x:Name="btnLoad3D" Content="Load 3D"  Width="100" Height="40" VerticalAlignment="Center" Grid.Row="1" Click="btnLoad3D_Click" Margin="4,0,0,0"/>
            <Button x:Name="btnInit" Content="Init"  Width="100" Height="40" VerticalAlignment="Center" Grid.Row="1" Click="btnInit_Click" Margin="4,0,0,0"/>
            <Button x:Name="btnClose" Content="Close"  Width="100" Height="40" VerticalAlignment="Center" Grid.Row="1" Click="btnClose_Click" Margin="4,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
